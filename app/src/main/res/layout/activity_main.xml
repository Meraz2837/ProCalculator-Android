<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/SecondaryTextviewID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#F6F5F6"
        android:gravity="right"
        android:textSize="22dp">

    </TextView>

    <TextView
        android:id="@+id/primaryTextciewID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="#E8E6E8"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="50sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:weightSum="6">

        <Button
            android:id="@+id/MCbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F6F5F6"
            android:text="MC"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/MRbtnID"

            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F6F5F6"
            android:text="MR"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/MPlusbtnID"

            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F6F5F6"
            android:text="M+"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/MMinusbtnID"

            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F6F5F6"
            android:text="M-"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/MSbtnID"

            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F6F5F6"
            android:text="MS"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/MbtnID"

            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F6F5F6"
            android:text="M"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/PercentagebtnID"
            android:layout_width="0sp"
            android:onClick="OtherOperator"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/percentage"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/CEbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cebutton"
            android:onClick="ClearFunction"
            android:text="CE"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/CbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cbutton"
            android:onClick="ClearFunction"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/BackbtnID"
            android:onClick="BackFunction"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/teal_200"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/OnebyXbtnID"
            android:layout_width="0sp"
            android:onClick="OtherOperator"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/onebyx"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/XSquarebtnID"
            android:layout_width="0sp"
            android:onClick="OtherOperator"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xsquare"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/RootXbtnID"
            android:layout_width="0sp"
            android:onClick="OtherOperator"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tworootx"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/DivisionbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/div"
            android:onClick="operationFunction"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:id="@+id/SevenbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Button
            android:id="@+id/EightbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Button
            android:id="@+id/NinebtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/MultiplybtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/multi"
            android:onClick="operationFunction"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:id="@+id/FourbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Button
            android:id="@+id/FivebtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Button
            android:id="@+id/SixbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/MinusbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/minus"
            android:onClick="operationFunction"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:id="@+id/OnebtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Button
            android:id="@+id/TwobtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Button
            android:id="@+id/ThreebtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="NumberFunction"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/PlusbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/plus"
            android:onClick="operationFunction"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/MinusPrebtnID"
            android:layout_width="0sp"
            android:onClick="OtherOperator"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/minuspre"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/ZerobtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/zerobtn"
            android:onClick="NumberFunction"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/DecimalPointbtnID"
            android:onClick="NumberFunction"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/demimalpointbtn"
            android:text="."
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/EqualbtnID"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/equal"
            android:onClick="ResultFunction"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>